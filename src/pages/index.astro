---
import Footer from "../components/Footer.astro";
import Projects from "../components/Projects.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="favicon.png" type="image/x-icon" />
    <title>Jeppe Hauman</title>
  </head>
  <body class="min-h-screen bg-[#1e1e1e]">
    <div
      class="top-0 left-0 w-full h-screen fixed -z-10 hidden lg:block"
      id="vanta"
    >
    </div>
    <div
      class="top-0 left-0 w-full h-screen fixed -z-10 lg:hidden"
      id="vanta-mobile"
    >
    </div>

    <div
      class="text-gray-300 h-screen flex flex-col justify-center items-center"
    >
      <h1
        class="text-center text-4xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl text-white font-bold mb-20 main-heading relative after:opacity-100 after:transition-all text-opacity-0"
      >
        Jeppe Hauman <br />Software Developer
      </h1>

      <div class="w-full hover:bg-[#1e1e1e] transition-all">
        <p class="max-w-lg text-center text-xl mx-auto py-5 px-2">
          A skilled and passionate software engineer experienced in delivering
          robust and user-centric applications. Explore my work below to witness
          my dedication to crafting elegant code and creating impactful digital
          experiences.
        </p>
      </div>
    </div>
    <Projects />
    <Footer />
    <script
      is:inline
      src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"
    ></script>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"
    ></script>
    <script is:inline>
      VANTA.NET({
        el: "#vanta",
        mouseControls: true,
        touchControls: true,
        gyroControls: false,
        minHeight: 500.0,
        minWidth: 200.0,
        scale: 1.0,
        scaleMobile: 1.0,
        backgroundColor: 0x1e1e1e,
        color: 0x935e41,
      });
      VANTA.NET({
        el: "#vanta-mobile",
        mouseControls: true,
        touchControls: true,
        gyroControls: false,
        minHeight: 500.0,
        minWidth: 200.0,
        scale: 1.0,
        scaleMobile: 1.0,
        backgroundColor: 0x1e1e1e,
        color: 0x935e41,
        spacing: 17.0,
        maxDistance: 17.0,
      });
    </script>
  </body>
</html>

<style>
  .main-heading::after {
    -webkit-text-stroke: 3px white;
    content: "Jeppe Hauman Software Developer";
    position: absolute;
    inset: 0;
  }
</style>
